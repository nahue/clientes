<h2>Entrar o
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrarse", new_registration_path(resource_name) %><br />
<% end -%></h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email', input_html: {class:'full'} %>
    <%= f.input :password, required: false, label: false, placeholder: 'Password', input_html: {class:'full'}   %>
    <!--<%= f.input :remember_me, wrapper: 'checkbox', as: :boolean if devise_mapping.rememberable? %>-->


    <div class="form-item">
        <%= f.button :submit, "Entrar", class: 'btn-small btn-border border white full' %>
    </div>
<% end %>

